<div class="row">
  <div class="col s2"></div>
   <form action="/note/{{article._id}}" method="POST" class="card-panel col s8 notes">
    <p id="noteHeading">Leave a note about this Article:</p>
      <div class="row">
        <div class="input-field">
          <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active formfields formInput">
        </div>
        <div class="input-field">
          <input id="icon_telephone" type="text" placeholder="Note" name="note" class="validate active formfields formInput">
        </div>
      </div>
      
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-note-button orange lighten-1" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h5>Notes:</h5>
        {{#if article.note}}
          {{#each article.note}}
            <div class="card">
              <p id="nameNote">{{name}}
                <form action="/deleteNote/{{this._id}}" method="POST">
                  <button class="glyphicon glyphicon-remove right brownb" id="deletebutt"></button>
                </form>
              </p>
              <p id= "note">{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Existing Notes.</p>
        {{/if}}
    </div>
</div>